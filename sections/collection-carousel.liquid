<div class="collection-carousel-container">
  {%assign collection_image = section.settings.carousel_collection.featured_image | img_url: 'master'%}
  <div class="flex-container collection-hero-container" style="background-image: url('{{collection_image}}');">
    <a href="{{section.settings.carousel_collection.url}}" class="collection-hero-cta" style="font-size: 1.5rem;">BESTSELLER</a>
  </div>
  <div class="flex-container product-carousel-container">
    <div class="product-slider">
      {%assign counter = 0%}
      {%for product in section.settings.carousel_collection.products %}
        {%if counter == 5%}
          {%break%}
        {%endif%}
        <a href="{{product.url}}">
          <div class="product-card">
            <div class="product-image">
              <img src="{{product.featured_image | img_url: 'medium'}}" alt="">
            </div>
            <div class="product-title">{{product.title}}</div>
            <div class="product-price">{{product.price | money}}</div>
          </div>
        </a>
        {%assign counter = counter | plus: 1%}
      {%endfor%}
    </div>
  </div>
</div>

{%schema%}
{
  "name": "Carousel Collection",
  "settings": [
    {
    "type": "collection",
    "id": "carousel_collection",
    "label": "Carousel collection"
    }
  ],
  "presets": [{
    "name": "Carousel Collection"
  }]
}
{%endschema%}